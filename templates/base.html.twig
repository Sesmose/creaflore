<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Le Fleuriste!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.12.0/css/mdb.min.css" rel="stylesheet">
    <link href="{{ asset('css/base.css')}}" rel="stylesheet">
    </head>
    <body>
<!--Navbar-->
<nav class="navbar navbar-expand-lg elegant-color-dark d-block">

    <!-- Collapse button -->
    <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target="#basicExampleNav1"
      aria-controls="basicExampleNav1" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon text-white"><i
        class="fas fa-bars fa-1x"></i></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="basicExampleNav1">
  <a class="navbar-brand" href="{{ path('home')}}">Le Fleuriste</a> 
      <!-- Links -->
      <ul class="navbar-nav mr-auto text-uppercase font-weight-normal">
        <li class="nav-item">
          <a class="nav-link" href="{{ path('boutique') }}">Notre boutique</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('bouquet_index') }}">Nos Bouquets</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('contact') }}">Contact</a>
        </li>

      </ul>
      <!-- Links -->
      <ul class="navbar-nav ml-auto nav-flex-icons">
        <li class="nav-item"><a href="{{ path('cart_index')}}" class="nav-link"><span class="badge red z-depth-1 mr-1"></span><i id="navbar-static-cart" alt="Cart" class="fas fa-shopping-cart"></i><span class="sr-only"> Cart </span></a></li>

        <li class="nav-item">
          <a class="nav-link font-weight-normal" href="{{ path('login') }}"><i id="navbar-static-cart" alt="Cart" class="fas fa-user"></i></a>
        </li>
      </ul>
    </div>
    <!-- Collapsible content -->


</nav>
<!--/.Navbar-->

        {% block body %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
            <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.12.0/js/mdb.min.js"></script>
    </body>
</html>
