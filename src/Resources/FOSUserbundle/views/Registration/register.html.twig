{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig'%}
{% block title %}S'inscrire{% endblock %}
{% block stylesheets %}
    <style>
        #error_log{
            color: red;
            font-size: 1.2em;
        }
    </style>
{% endblock %}
{% block body %}


{% block fos_user_content %}

    <div class="container mt-5 elegant-color-dark text-white text-center">  
{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
    <div>
        <input class="btn btn-white" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
</div>

{% endblock fos_user_content %}
{% endblock %}